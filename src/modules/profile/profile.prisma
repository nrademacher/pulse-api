model Profile {
  id           Int @id @default(autoincrement())
  bio          String?
  user         User @relation(fields: [userId], references: [id])
  userId       Int @unique
  collections  Collection[]
}

model User {
  id       Int @id @default(autoincrement())
  profile  Profile?
}

model Collection {
  id         Int @id @default(autoincrement())
  profile    Profile @relation(fields: [profileId], references: [id])
  profileId  Int
}

{
  "name": "spark-api",
  "version": "1.0.0",
  "description": "API for Spark",
  "main": "dist/server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "codegen": "graphql-codegen",
    "postcodegen": "prepend '// @ts-nocheck\n' src/types/graphql.ts",
    "prismix": "prismix && prisma format",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "DB_ENV=prod primsa migrate dev && prisma migrate deploy",
    "prisma": "yarn prismix && yarn prisma:generate && yarn prisma:migrate",
    "prisma:studio": "prisma studio",
    "dev": "concurrently \"ts-node-dev --no-notify --respawn --transpile-only src\" \"yarn codegen --watch\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|prisma|graphql)\" --write",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "DB_ENV=test jest -i",
    "build": "tsc",
    "postbuild": "cpy '**/*.graphql' '../dist' --cwd=src --parents",
    "start": "node dist",
    "start:prod": "DB_ENV=prod node dist"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.2.1",
    "@nrademacher/prepend-cli": "^1.0.10",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.0.2",
    "@types/lodash.merge": "^4.6.6",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "concurrently": "^6.2.2",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "prettier-plugin-prisma": "^3.1.1",
    "prisma": "3.0.2",
    "prismix": "^1.0.19",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.1.0",
    "@graphql-tools/load": "^7.3.0",
    "@graphql-tools/schema": "^8.2.0",
    "@prisma/client": "3.0.2",
    "apollo-server-express": "^3.3.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.6.0",
    "graphql-subscriptions": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "module-alias": "^2.2.2",
    "subscriptions-transport-ws": "^0.9.19"
  }
}

{
  "name": "synergy-api",
  "version": "1.0.0",
  "description": "API for Synergy",
  "license": "MIT",
  "private": true,
  "scripts": {
    "codegen": "graphql-codegen",
    "postcodegen": "file-ops prepend '// @ts-nocheck\n' src/types/graphql.ts",
    "prismix": "prismix && prisma format",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "DB_ENV=prod primsa migrate dev && prisma migrate deploy",
    "prisma": "yarn prismix && yarn prisma:generate && yarn prisma:migrate",
    "prisma:studio": "prisma studio",
    "dev": "concurrently \"ts-node-dev --no-notify --respawn --transpile-only src\" \"yarn codegen --watch\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|prisma|graphql)\" --write",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "DB_ENV=test jest -i",
    "build": "tsc",
    "copy-graphql-files-to-dist": "cpy '**/*.graphql' '../dist' --cwd=src --parents",
    "replace-dist-import-aliases": "file-ops fnr '#internal' '#internal_compiled' 'dist/**/*.js'",
    "postbuild": "yarn copy-graphql-files-to-dist && yarn replace-dist-import-aliases",
    "start": "node dist/servers",
    "start:prod": "DB_ENV=prod node dist"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.2.1",
    "@nrademacher/file-ops-cli": "^2.4.5",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.0.2",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^6.2.2",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^37.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "prettier-plugin-prisma": "^3.1.1",
    "prisma": "^3.2.1",
    "prismix": "^1.0.19",
    "ts-jest": "^27.0.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.1.0",
    "@graphql-tools/load": "^7.3.0",
    "@graphql-tools/schema": "^8.2.0",
    "@prisma/client": "3.0.2",
    "apollo-server-express": "^3.3.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.6.0",
    "graphql-subscriptions": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "subscriptions-transport-ws": "^0.9.19"
  },
  "imports": {
    "#internal/lib": "./src/lib/index.ts",
    "#internal/modules": "./src/modules/index.ts",
    "#internal/types": "./src/types/index.ts",
    "#internal/utils": "./src/utils/index.ts",
    "#internal/*": "./src/*.ts",
    "#internal_compiled/lib": "./dist/lib/index.js",
    "#internal_compiled/modules": "./dist/modules/index.js",
    "#internal_compiled/types": "./dist/types/index.js",
    "#internal_compiled/utils": "./dist/utils/index.js",
    "#internal_compiled/*": "./dist/*.js"
  }
}

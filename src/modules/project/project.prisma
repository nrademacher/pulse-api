model Project {
  id         String @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  title      String
  boards     Board[]
  user       User @relation(fields: [userId], references: [id])
  userId     String
}

model Board {
  id            String @id @default(cuid())
  project      Project @relation(fields: [projectId], references: [id])
  projectId     String
}

model User {
  id           String @id @default(cuid())
  projects     Project[]
}

{
  "name": "xkanban-api",
  "version": "1.0.0",
  "description": "API for xkanban client",
  "main": "index.ts",
  "author": "Nikolay Rademacher",
  "license": "MIT",
  "private": true,
  "scripts": {
    "codegen:generate": "graphql-codegen",
    "postcodegen:generate": "printf '// @ts-nocheck'$'\n'\"$(cat src/graphql/types.ts)\" > src/graphql/types.ts",
    "prismix": "prismix && prisma format",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "PG_HOST=localhost prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma": "yarn prismix && yarn prisma:generate && yarn prisma:migrate",
    "prisma:studio": "PG_HOST=localhost prisma studio",
    "dev": "PG_HOST=localhost concurrently \"ts-node-dev --no-notify --respawn --transpile-only src/server\" \"yarn codegen:generate  --watch\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "build": "tsc",
    "postbuild": "copyfiles src/modules/**/*.graphql dist/modules/ -f",
    "start": "node dist/server"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.2.1",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "concurrently": "^6.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "prettier": "^2.4.1",
    "prisma": "3.0.2",
    "prismix": "^1.0.19",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.1.0",
    "@graphql-tools/load": "^7.3.0",
    "@prisma/client": "3.0.2",
    "apollo-server": "^3.3.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21"
  }
}

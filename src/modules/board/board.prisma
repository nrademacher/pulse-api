model Board {
  id            String @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String 
  lists         List[]
  collection    Collection @relation(fields: [collectionId], references: [id])
  collectionId  String
}

model List {
  id       String @id @default(cuid())
  board    Board @relation(fields: [boardId], references: [id])
  boardId  String

  @@map("lists")
}

model Collection {
  id      String @id @default(cuid())
  boards  Board[]
}

{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "paths": {
      "#internal/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}

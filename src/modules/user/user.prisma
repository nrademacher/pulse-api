model User {
  id             String @id @default(cuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  email          String @unique
  name           String?
  password_hash  String?
  collections    Collection[]

  @@map("users")
}

model Collection {
  id      String @id @default(cuid())
  user    User @relation(fields: [userId], references: [id])
  userId  String

  @@map("collections")
}

